@{
    <h1>Books</h1>
    <a href="@Url.Action("AddBook", "Books")">Add New Book</a>
    
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Page</th>
        </tr>
        @foreach (BookModel book in ViewBag.Books)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Page</td>
            </tr>
        }
    </table>

    
    
}
